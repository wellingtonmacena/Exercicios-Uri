using System;

namespace Uri2
{
    class Program
    {
        static void Main(string[] args)
        {

            double s = 1;
            double passo2 = 2;

            for (double passo = 3; passo <= 39; passo +=2)
            {
                    s += passo / passo2;
                    passo2 *= 2;
            }

            Console.WriteLine(s.ToString("F2"));
            Console.ReadLine();

        }
    }
}
